{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja"
    },
    {
      "name": "Debug",
      "inherits": "default",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "JUCE_BUILD_EXTRAS": "ON",
        "COPY_AFTER_BUILD": "OFF"
      }
    },
    {
      "name": "Release",
      "inherits": "default",
      "displayName": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "COPY_AFTER_BUILD": "ON"
      }
    },
    {
      "name": "Docs",
      "inherits": "Release",
      "displayName": "Docs",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FETCHCONTENT_FULLY_DISCONNECTED": "TRUE"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Release",
      "configurePreset": "Release",
      "configuration": "Release"
    },
    {
      "name": "Docs",
      "configurePreset": "Docs",
      "targets": ["docs"]
    }
  ],
  "testPresets": [
    {
      "name": "Release",
      "configurePreset": "Release",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      },
      "configuration": "Release",
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "black-lounge",
      "displayName": "black-lounge",
      "configurePreset": "Release",
      "configurations": ["Release"],
      "configFile": "${sourceDir}/build/Black_Lounge/CPackConfig-BlackLounge.cmake"
    },
    {
      "name": "abyss",
      "displayName": "abyss",
      "configurePreset": "Release",
      "configurations": ["Release"],
      "configFile": "${sourceDir}/build/Abyss/CPackConfig-Abyss.cmake"
    }
  ],
  "workflowPresets": [
    {
      "name": "Docs",
      "steps": [
        {
          "type": "configure",
          "name": "Docs"
        },
        {
          "type": "build",
          "name": "Docs"
        }
      ]
    },
    {
      "name": "Release",
      "steps": [
        { "type": "build", "name": "Release" },
        { "type": "package", "name": "black-lounge" }
      ]
    }
  ],
  "vendor": {
    "example.com/ExampleIDE/1.0": {
      "autoFormat": false
    }
  }
}

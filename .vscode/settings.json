{
  "cmake.useCMakePresets": "always",
  "cmake.options.advanced": {
    "testPreset": {
      "statusBarVisibility": "hidden"
    },
    "buildPreset": {
      "statusBarVisibility": "hidden"
    },
    "cpack": {
      "statusBarVisibility": "hidden"
    },
    "packagePreset": {
      "statusBarVisibility": "hidden"
    },
    "workflow": {
      "statusBarVisibility": "hidden"
    },
    "workflowPreset": {
      "statusBarVisibility": "hidden"
    }
  },
  "cmake.preferredGenerators": ["Xcode"],

  "search.useIgnoreFiles": false, // Disable respecting .gitignore
  "search.exclude": {
    "**/build": true,
    "**/external": false
  },
  // "editor.formatOnSave": true,
  "C_Cpp.clang_format_fallbackStyle": "Microsoft", // C++ core guidelines
  "liveServer.settings.NoBrowser": true,
  "liveServer.settings.useLocalIp": true,
  "cmake.debugConfig": {
    "[mac]": {
      "MIMode": "lldb"
    }
  },
  "files.associations": {
    "memory": "cpp",
    "mutex": "cpp",
    "shared_mutex": "cpp",
    "*.mm": "cpp",
    "tuple": "cpp",
    "vector": "cpp"
  }
}
